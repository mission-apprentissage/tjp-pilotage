{
  "extends": [
    "plugin:n/recommended-module",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "plugins": ["zod"],
  "rules": {
    "@typescript-eslint/no-floating-promises": ["error"],
    "n/no-missing-import": 0,
    "@dword-design/import-alias/prefer-alias": [
      "error",
      {
        "alias": {
          "@": "./server/src",
          "@tests": "./server/tests"
        }
      }
    ],
    "n/no-extraneous-import": [
      "error",
      {
        "allowModules": ["shared"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "rules": {
        "n/no-extraneous-import": ["off"]
      }
    },
    {
      "files": ["**/migrations/**/*.ts", "./src/index.ts", "./src/main.ts"],
      "rules": {
        "@typescript-eslint/no-floating-promises": ["off"]
      }
    }
  ],
  "env": {
    "es2022": true,
    "node": true
  },
  "settings": {
    "node": {
      "allowModules": []
    }
  },
  "ignorePatterns": ["test/jest.config.js", "test/jest-integration.config.js"]
}
